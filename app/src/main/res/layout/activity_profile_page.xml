<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".ProfilePage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:id="@+id/profile"
        android:text="MY PROFILE"/>

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:srcCompat="@drawable/fotoprofil" />

    <TextView
        android:id="@+id/biodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM 00000029071\nNama Stephanie\nKelas FL"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/reference"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:id="@+id/reference"
        app:layout_constraintTop_toBottomOf="@id/biodata">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Reference"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/Google"
        app:layout_constraintTop_toBottomOf="@id/reference">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textStyle="bold"
            android:text="https://www.wildantechnoart.net/2018/02/cara-menerapkan-show-hide-password-di-android-studio.html
            \nhttps://qastack.id/programming/19545370/android-how-to-hide-actionbar-on-certain-activities
            \nhttps://kebunit.blogspot.com/2019/01/how-to-make-circle-image-in-android.html
            \nhttps://code.tutsplus.com/tutorials/create-a-music-player-on-android-project-setup--mobile-22764
            \nhttps://code2care.org/2015/alertdialog-with-no-buttons-just-text-message
            \nhttps://stackoverflow.com/questions/10134338/using-seekbar-to-control-volume-in-android
            \nhttps://www.youtube.com/watch?v=kf2fxYLOiSo
            \nhttps://www.youtube.com/watch?v=zHRmlzDqE30
            \nhttps://www.youtube.com/watch?v=86JmsXOfyv0"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Google"
        android:background="@drawable/loginbutton"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Â© Stephanie - 2021"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent" />

</LinearLayout>
